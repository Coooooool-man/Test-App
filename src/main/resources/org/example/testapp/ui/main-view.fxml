<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox spacing="15.0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.testapp.ui.MainController"
      style="-fx-background-color: white;">


    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>


    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="idCol" text="id" maxWidth="800"/>
            <TableColumn fx:id="loginCol" text="Логин"/>
            <TableColumn fx:id="passCol" text="Пароль"/>
            <TableColumn fx:id="roleCol" text="Доступ"/>
            <TableColumn fx:id="createCol" text="Дата создания"/>

            <TableColumn fx:id="modCol" text="Дата последнего&#10;редактирования"/>
        </columns>
        <placeholder>
            <Label text="Нет данных"/>
        </placeholder>
    </TableView>


    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button fx:id="btnDelete" text="Удалить" disable="true" onAction="#handleDelete" styleClass="flat-button"/>
        <Button fx:id="btnEdit" text="Редактировать" disable="true" onAction="#handleEdit" styleClass="flat-button"/>
        <Button fx:id="btnCreate" text="Создать" onAction="#handleCreate" styleClass="flat-button"/>
    </HBox>

</VBox>